<div class="jumbotron text-center">
    <h1>{{title}}</h1>
    <p>{{description}}</p>
</div>

<!-- Search Bar -->
<div class="md-form mt-0">
    <input class="form-control" type="text" placeholder="Search by Genre Name or Multiplayer Capability" aria-label="Search">
</div>

<table class="table">
    <thead>
    <tr>
        <th scope="col">GameID (will be replaced with game name for readability)</th>
        <th scope="col">Genre Name</th>
        <th scope="col">Multiplayer Capability?</th>
    </tr>
    </thead>
    <tbody>
    <tr>
        <th scope="row">1</th>
        <td>FPS</td>
        <td>Yes</td>
    </tr>
    <tr>
        <th scope="row">2</th>
        <td>RPG</td>
        <td>No</td>
    </tr>
    <tr>
        <th scope="row">3</th>
        <td>Platformer</td>
        <td>Yes</td>
    </tr>
    </tbody>
</table>

<h3>Form to Add a New Genre</h3>

<form>
    <div class="form-group">
        <label  for="exampleFormControlSelect1">Video Game</label>
        <select class="form-control" id="exampleFormControlSelect1">
            <option>These will be populated by games currently in the database</option>
            <option>Mario</option>
            <option>Splinter Cell</option>
            <option>Etc.</option>

        </select>
    </div>
    <div class="form-group">
        <label for="exampleFormControlSelect1">Genre Name</label>
        <textarea class="form-control" id="exampleFormControlTextarea1" rows="1"></textarea>
    </div>
    <div class="form-group">
        <label for="exampleFormControlTextarea1">Multiplayer Capability?</label>
        <select class="form-control" id="exampleFormControlSelect2">
            <option>Yes</option>
            <option>No</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Add New Genre</button>
</form>
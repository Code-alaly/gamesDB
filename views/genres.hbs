<div class="jumbotron text-center">
    <h1>{{title}}</h1>
    <p>{{description}}</p>
</div>

<!-- Search Bar -->
<div class="md-form mt-0">
    <input class="form-control" type="text" placeholder="Search by Genre Name or Description" aria-label="Search">
</div>

<table class="table">
    <thead>
    <tr>
        <th scope="col">Genre</th>
        <th scope="col">Description</th>
    </tr>
    </thead>
    <tbody id="myTable">
    {{#each results}}

        <tr>
            <td>
                {{this.name}}
            </td>
            <td>
                {{this.description}}
            </td>
            <td>
                <button type="button" class="btn btn-info btn-rounded btn-sm m-0">Remove</button>
            </td>
        </tr>
    {{/each}}
    </tbody>
</table>

<h3>Form to Add a New Genre</h3>

<form>
    <div class="form-group">
        <label for="exampleFormControlSelect1">Genre Name</label>
        <textarea class="form-control" id="exampleFormControlTextarea1" rows="1"></textarea>
    </div>
    <div class="form-group">
        <label for="exampleFormControlTextarea1">Description</label>
        <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Add New Genre</button>
</form>
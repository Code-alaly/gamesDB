<div class="jumbotron text-center">
    <h1>{{title}}</h1>
    <p>{{description}}</p>
</div>

<!-- Search Bar -->
<div class="md-form mt-0">
    <input class="form-control" type="text" placeholder="Search by Developer Name or Company Size" aria-label="Search">
</div>

<table class="table">
    <thead>
    <tr>
        <th scope="col">GameID (will be replaced with game name for readability)</th>
        <th scope="col">Developer Name</th>
        <th scope="col">Company Size (# employees)</th>
        <th scope="col">Button To Change Name?</th>
    </tr>
    </thead>
    <tbody>
    <tr>
        <th scope="row">1</th>
        <td>Blizzard</td>
        <td>35,000</td>
        <td>
            <button type="button" class="btn btn-teal btn-rounded btn-sm m-0">Edit Name</button>
        </td>
    </tr>
    <tr>
        <th scope="row">2</th>
        <td>Epic</td>
        <td>20,000</td>
        <td>
            <button type="button" class="btn btn-teal btn-rounded btn-sm m-0">Edit Name</button>
        </td>
    </tr>
    <tr>
        <th scope="row">3</th>
        <td>Activision</td>
        <td>50,000</td>
        <td>
            <button type="button" class="btn btn-teal btn-rounded btn-sm m-0">Edit Name</button>
        </td>
    </tr>
    </tbody>
</table>

<h3>Form to Add a New Video Game</h3>

<form>
    <div class="form-group">
        <label  for="exampleFormControlSelect1">Video Game</label>
        <select class="form-control" id="exampleFormControlSelect1">
            <option>These will be populated by games currently in the database</option>
            <option>Mario</option>
            <option>Splinter Cell</option>
            <option>Etc.</option>

        </select>
    </div>
    <div class="form-group">
        <label for="exampleFormControlSelect1">Developer Name</label>
        <textarea class="form-control" id="exampleFormControlTextarea1" rows="1"></textarea>
    </div>
    <div class="form-group">
        <label for="exampleFormControlTextarea1">Company Size</label>
        <textarea class="form-control" id="exampleFormControlTextarea1" rows="1"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Add New Developer</button>
</form>